---
pagination:
    data: collections.contentfulArticles
    size: 1
    alias: article
permalink: "/articles/{{ article.fields.slug }}/"
layout: "baseOthers.njk"
---

<main
            class="w-full bg-white mt-[75px] lg:mt-[90px] max-w-[1400px] mx-auto relative"
            id="header"
        >
            <div class="px-5 md:p-10 bg-gray-50 py-10"> <!--  lg:ml-60  -->
                <div class="max-w-4xl mx-auto">
                    <h1 class="text-2xl lg:text-3xl font-bold text-center uppercase"> {{ article.fields.title }}</h1>
                    <div class="flex justify-between items-center mt-2 lg:w-[90%] mx-auto">
                        <h6 class="flex items-center gap-3 text-pbase">
                            <img src="{{ article.fields.author.fields.avatar.fields.file.url }}" alt="author's pic"class="aspect-square w-8 rounded-full object-cover">
                                    {{ article.fields.author.fields.name }}
                        </h6>
                        <h6 class="text-[14px]">{{ article.fields.publishedDate | formatDate }}</h6>
                    </div>
                    <p class="text-pbase font-medium my-4 lg:text-base lg:w-[90%] mx-auto">
                            {{ article.fields.subtitle }}
                        </p>
                    <div
                        class="w-[90%] mx-auto aspect-[16_/_8] bg-gray-200 mt-6 overflow-hidden"
                    >
                        <img
                            src="{{ article.fields.featuredImage.fields.file.url }}"
                            alt=""
                            class="object-cover w-full h-full"
                        />
                    </div>
                    <div class="mt-10 lg:w-[90%] mx-auto">
                        <div class="prose max-w-none articleContent">
                            {{ article.fields.mainContent | renderRichText | safe }}
                        </div>
                        <p
                            class="text-pbase font-semibold lg:text-base mb-3 mt-5"
                        >
                            {{ article.fields.summary }}
                        </p>
                        <p class="mt-3">
                            <a
                                href="/contact/"
                                class="text-pbase font-medium lg:text-base text-phosBlue underline hover:text-gray-900"
                            >
                                
                            </a>
                        </p>
                    </div>
                    <div class="bg-phosBlue w-full py-10 px-5 flex flex-col lg:flex-row items-center justify-between mt-5">
                        <h3 class="text-white text-base lg:text-xl font-semibold mb-4 lg:mb-0">Subscribe to our newsletter</h3>
                        <form class="w-[90%] md:w-auto mx-auto md:mx-0">
                            <div
                                class="flex flex-row justify-start md:justify-normal w-full md:w-[350px] lg:w-[400px] bg-white rounded-md items-start overflow-hidden h-9 md:h-10"
                            >
                                <input
                                    type="text"
                                    class="focus:outline-none border-0 flex-1 h-9 md:h-10 p-3 placeholder:text-sm"
                                    id="newsletter"
                                    placeholder="Your email here"
                                />
                                <button
                                    type="submit"
                                    class="text-center border-0 focus:outline-none h-9 md:h-10 flex items-center justify-center px-3"
                                >
                                    <i
                                        class="bx bx-send text-black text-2xl -rotate-45 text-center font-semibold"
                                    ></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mx-auto mt-8 flex items-center justify-center gap-3">
                    {% if pagination.href.previous %}
                        <a href="{{ pagination.href.previous }}" class="px-4 md:px-8 py-2 md:py-3 bg-gray-200 border-[1px] border-gray-500 rounded-sm">&#171; Previous Article</a>
                    {% endif %}
                    {% if pagination.href.next %}
                        <a href="{{ pagination.href.next }}" class="px-4 md:px-8 py-2 md:py-3 bg-gray-200 border-[1px] border-gray-500 rounded-sm">Next Article &#187;</a>
                    {% endif %}
                </div>
            </div>
</main>